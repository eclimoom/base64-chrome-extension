{
  "name": "Base64 to Image",
  "version": "0.1.7",
  "description": "A base64 encoder/decoder extensions for the chrome, 增加文件上传、远端文件的加载显示",
  "manifest_version": 3,
  "default_locale": "en",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "assets/icons/16.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  },
  "permissions": [
    "clipboardRead",
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "assets/rules.json"
      }
    ]
  }
}
